---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="py-24 md:py-32" id="hero">
  <!-- Ultra Modern Floating Glass Balls -->
  <div class="glass-balls">
    <div class="ball" style="top: 5%; left: 10%;"></div>
    <div class="ball" style="top: 40%; left: 70%;"></div>
    <div class="ball" style="top: 70%; left: 25%;"></div>
  </div>
  <h1
    class="float mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-8xl"
  >
    {name}
  </h1>

  <p
    class="float mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
    style="animation-delay: .4s"
  >
    {specialty}
  </p>

  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <a
    class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-[#fff]"
    href={`mailto:${email}`}
  >
    Get in Touch
  </a>

  <a
    class="ml-3 inline-block rounded-full bg-gray-100 px-8 py-5 text-sm leading-5 font-bold text-primary"
    href="https://drive.google.com/file/d/1xz4QIzi4PnWONy_yqYM6lj_JVZa8SsiL/view?usp=drive_link"
    target="_blank"
    rel="noopener noreferrer"
  >
    Download CV
  </a>
</section>
